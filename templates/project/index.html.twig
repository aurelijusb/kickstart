{% extends 'base.html.twig' %}

{% block title %}Projektai{% endblock %}

{% block body %}
    <body data-gr-c-s-loaded="true">
    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Studentai</li>
        {% for key, students in dataArray %}

            {% for student in students.students %}
                <li class="list-group-item">

                <a href="{{ path('student', {project:key, name:student})}}">{{ student }}</a>
                (
                <span class="badge">Mentorius</span>
                <span> {{ students.mentors.0 }}</span>
                )
            {% endfor %}
            </li>
        {% endfor %}
    </ul>

    <div class="m-4">
        <form action="{{path('student') }}" method="get">
            <div class="input-group">
                <input name="name" type="text" class="form-control" placeholder="Studentas">
            </div>
            <div class="input-group">
                <input name="project" type="text" class="form-control" placeholder="Projektas">
            </div>
            <button type="submit" class="btn btn-success">Sužinoti vertinimą</button>
        </form>
    </div>


    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>


            {% for project, students in dataArray %}
        <li class="list-group-item">
            <h3>{{ students.name }}</h3>

            <div class="panel panel-default">
                <div>
                    <a target="_blank" href="https://github.com/nfqakademija/{{project }}">github.com/nfqakademija/{{key}}</a>
                    <span class="badge">GitHub</span>
                </div>
                <div>
                    <a target="_blank"
                       href="http://{{project|e('html')}}.projektai.nfqakademija.lt/">{{project|e('html')}}.projektai.nfqakademija.lt/</a>
                    <span class="badge">Web</span>
                </div>
                <div>
                    <pre>ssh {{project|e('html')}}@deploy.nfqakademija.lt -p 2222</pre>
                </div>
            </div>
        </li>
        {% endfor %}
    </ul>
    <div class="m-4">
        <a class="text-light" href="{{ path('viewFile') }}">Duomenų failas</a>
    </div>
{% endblock %}
