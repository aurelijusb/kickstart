{% extends 'base.html.twig' %}

{% block title %}Projektai{% endblock %}

{% block body %}
    <body data-gr-c-s-loaded="true">
    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Studentai</li>
        {% for students in dataArray %}

            {% for student in students.students %}
                <li class="list-group-item">
                <a href="/student?name={{ student |url_encode }}&project={{ students.name|url_encode }}">{{ student }}</a>
                (
                <span class="badge">Mentorius</span>
                <span> {{ students.mentors.0 }}</span>
                )
            {% endfor %}
            </li>
        {% endfor %}
    </ul>

    <div class="m-4">
        <form action="/student" method="get">
            <div class="input-group">
                <input name="name" type="text" class="form-control" placeholder="Studentas">
            </div>
            <div class="input-group">
                <input name="project" type="text" class="form-control" placeholder="Projektas">
            </div>
            <button type="submit" class="btn btn-success">Sužinoti vertinimą</button>
        </form>
    </div>


    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>


            {% for key, students in dataArray %}
        <li class="list-group-item">
            <h3>{{ students.name }}</h3>

            <div class="panel panel-default">
                <div>
                    <a target="_blank" href="https://github.com/nfqakademija/{{key}}">github.com/nfqakademija/{{key}}</a>
                    <span class="badge">GitHub</span>
                </div>
                <div>
                    <a target="_blank"
                       href="http://{{key|url_encode}}.projektai.nfqakademija.lt/">{{key|url_encode}}.projektai.nfqakademija.lt/</a>
                    <span class="badge">Web</span>
                </div>
                <div>
                    <pre>ssh {{key|url_encode}}@deploy.nfqakademija.lt -p 2222</pre>
                </div>
            </div>
        </li>
        {% endfor %}
    </ul>
    </body>
{% endblock %}
