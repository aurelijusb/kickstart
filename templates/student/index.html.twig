{% extends 'base.html.twig' %}

{% block title %}Vertinimas{% endblock %}

{% block body %}
    <body data-gr-c-s-loaded="true">
    <div class="bg-light m-4">
        <table class="table">
            <tbody>
            <tr>
                <th scope="row">Projektas</th>
                <th scope="row">Studentas</th>
            </tr>
            <tr>
                <td>{{ project }}</td>
                <td>{{ name }}</td>
            </tr>
            </tbody>
        </table>
        {% if name == 'Viktoras' %}
            <div class="alert alert-success" role="alert">
                Dešimt balų
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Gal pasiseks kitą kartą
            </div>
        {% endif %}
    </div>
    <div class="m-4">
        <a class="text-light" href="/">Visi studentai</a>
    </div>
    <script src="/build/runtime.js">
    </script><script src="/build/vendors~app.js">
    </script><script src="/build/app.js"></script>

{% endblock %}
