{% extends 'base.html.twig' %}

{% block title %}Hello PeopleController!{% endblock %}

{% block body %}
    <div id="root">Loading...</div>
    <noscript>To use this app, enable JavaScript</noscript>
    <div>
        Versijuojamas JavaScript failas: <b id="versionedFile">...</b>
    </div>

    <div class="input_row">
        <span>Vardas:</span>
        <input type="text" id="name"/>
        <span id="validation-result-name" data-path="{{ path('validateInput', {'element': 'name'}) }}"></span>
    </div>

    <div class="input_row">
        <span>Komanda:</span>
        <input type="text" id="team"/>
        <span id="validation-result-team" data-path="{{ path('validateInput', {'element': 'team'}) }}"></span>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        var usingVersionedFileJs = true;
        var usingReactApp = true;
    </script>
    {{ encore_entry_script_tags('validation') }}
    {{ parent() }}
{% endblock %}
