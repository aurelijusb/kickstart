{% extends 'base.html.twig' %}

{% block title %}Hello PeopleController!{% endblock %}

{% block body %}
    <noscript>To use this app, enable JavaScript</noscript>
    <div>
        Versijuojamas JavaScript failas: <b id="versionedFile">...</b>
    </div>
    <div id="root">Loading...</div>

    <label for="name">Vardas: </label>
    <input type="text" id="name"/>
    <span id="validation-result-name" data-path="{{ path('validate', {'element': 'name'}) }}"></span>
    <br>
    <label for="team">Komanda: </label>
    <input type="text" id="team"/>
    <span id="validation-result-team" data-path="{{ path('validate', {'element': 'team'}) }}"></span>

{% endblock %}

{% block javascripts %}
    <script>
        var usingVersionedFileJs = true;
        var usingReactApp = true;
    </script>
    {{ encore_entry_script_tags('validation') }}
    {{ parent() }}
{% endblock %}
