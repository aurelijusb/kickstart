{% extends 'base.html.twig' %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block body %}
    <form action="{{ path('upload') }}" method="post" enctype="multipart/form-data">
        Select image to upload:
        <input type="file" name="fileToUpload" id="fileToUpload">
        <input type="submit" value="Upload Image" name="submit">
    </form>

    <hr/>

    {% if files %}
        During file upload (placed to temporary directory)
        <ul>
        {% for name, file in files %}
            <li>{{ name }}: {{ file.realPath }}</li>
        {% endfor %}
        </ul>
    {% endif %}


    {% if uploadedFiles %}
        All uploaded images:<br/>
        {% for name in uploadedFiles %}
            <img src="uploads/{{ name|url_encode }}" style="width: 25%; height: 25%; margin: 0.5em"/>
        {% endfor %}
    {% endif %}
{% endblock %}
