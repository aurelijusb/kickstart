{% extends 'base.html.twig' %}

{% block title %}Projektai{% endblock %}

{% block body %}
    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Studentai</li>
        {% for student in students %}
        <li class="list-group-item">
            <a href="{{ path('student') }}?name={{ student.student|url_encode }}&project={{ student.project|url_encode }}">{{ student.student }}</a>
            (
            <span class="badge">Mentorius</span> {{ student.mentor }} )
        </li>
        {% endfor %}
    </ul>

    <div class="m-4">
        <form action="{{ path('student') }}" method="get">
            <div class="input-group">
                <input name="name" type="text" class="form-control" placeholder="Studentas">
            </div>
            <div class="input-group">
                <input name="project" type="text" class="form-control" placeholder="Projektas">
            </div>
            <button type="submit" class="btn btn-success">Sužinoti vertinimą</button>
        </form>
    </div>

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>
        {% for nameUrl, project in projects %}
            <li class="list-group-item">
                <h3>{{ project.name }}</h3>
                <div class="panel panel-default">
                    <div>
                        <a href="//github.com/nfqakademija/{{ nameUrl|url_encode }}">github.com/nfqakademija/{{ nameUrl }}</a>
                        <span class="badge">GitHub</span>
                    </div>
                    <div>
                        <a href="//{{ nameUrl|url_encode }}projektai.nfqakademija.lt">{{ nameUrl }}.projektai.nfqakademija.lt</a>
                        <span class="badge">Web</span>
                    </div>
                    <div>
                        <pre>ssh {{ nameUrl }}@deploy.nfqakademija.lt -p 2222</pre>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="m-4">
        <a class="text-light" href="{{ path('students_json') }}">Duomenų failas</a>
    </div>
{% endblock %}
