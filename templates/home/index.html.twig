{% extends 'base.html.twig' %}

{% block title %}HomeWork...{% endblock %}

{% block body %}
    <ul class="list-group m-4">
    <li class="list-group-item list-group-item-info">Studentai</li>
    {% for student in someVariable %}

        {% for name in student.students%}
            <li class="list-group-item">
                <a href="{{path("studentas")}}?student={{name|url_encode}}&project={{student.name|url_encode}}">{{name}}</a>
                (
                <span class="badge">Mentorius</span> 
                {% for name in student.mentors %}
                {{name}}
                {% endfor %}
                )
            </li>
        {% endfor %}
    {% endfor %}
   </ul>

    <div class="m-4">
        <form action="/studentas?student="student"&project="project" method="get">
            <div class="input-group">
                <input name="student" type="text" class="form-control" placeholder="Studentas"/>
            </div>
            <div class="input-group">
                <input name="project" type="text" class="form-control" placeholder="Projektas"/>
            </div>
            <button type="submit" class="btn btn-success">Sužinoti vertinimą</button>
        </form>
    </div>

    <ul class="list-group m-4">
      <li class="list-group-item list-group-item-info">Projektai</li>

    {% for teamName in someVariable %}
        <li class="list-group-item">
                <h3>{{teamName.name}}</h3>
                <div class="panel panel-default">
                    <div>
                        <a target="_blank" href="https://github.com/nfqakademija/{{teamName.name|url_encode}}">github.com/nfqakademija/{{teamName.name}}</a>
                        <span class="badge">GitHub</span>
                    </div>
                    <div>
                        <a target="_blank" href="http://{{teamName.name|url_encode}}.projektai.nfqakademija.lt/">{{teamName.name}}.projektai.nfqakademija.lt/</a>
                        <span class="badge">Web</span>
                    </div>
                    <div>
                        <pre>ssh {{teamName.name}}@deploy.nfqakademija.lt -p 2222</pre>
                    </div>
                </div>
            </li>
    {% endfor %}

    <ul>

     <div class="m-4">
        <a class="text-light" href="https://hw1.nfq2019.online/students.json">Duomenų failas</a>
    </div>

{% endblock %}
