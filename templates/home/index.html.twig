{% extends 'base.html.twig' %}

{% block title %}Projektai{% endblock %}

{% block body %}

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Studentai</li>
            {% for teamName, teamObj in dataArray %}
                {% for student in teamObj.students %}
                <li class="list-group-item">
                    <a href="{{ path('student', {'name': student , 'project': teamName })}}"> {{ student }} </a> 
                    ( <span class="badge"> Mentorius </span>{{ teamObj.mentors[0]}} )
                </li>
                 {% endfor %}
            {% endfor %}
    </ul>

    <div class="m-4">
        <form action="/student" method="get">
            <div class="input-group">
                <input class="form-control" name="name" type="text"  placeholder="Studentas"/>
            </div>
            <div class="input-group">
                <input class="form-control" name="project" type="text" placeholder="Projektas"/>
            </div>
            <button class="btn btn-success" type="submit" >Sužinoti vertinimą</button>
        </form>
    </div>

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>
         {% for teamUrl, teamObj in dataArray %}
          <li class="list-group-item">
                <h3>{{ teamObj.name }}</h3>
                <div class="panel panel-default">
                    <div>
                        <a target="_blank" href="https://github.com/nfqakademija/{{ teamUrl | url_encode }}">github.com/nfqakademija/{{ teamUrl }}</a>
                        <span class="badge">GitHub</span>
                    </div>
                    <div>
                        <a target="_blank" href="http://{{ teamUrl | url_encode }}.projektai.nfqakademija.lt/">{{ teamUrl }}.projektai.nfqakademija.lt/</a>
                        <span class="badge">Web</span>
                    </div>
                    <div>
                        <pre>ssh {{ teamUrl }}@deploy.nfqakademija.lt -p 2222</pre>
                    </div>
                </div>
            </li>
        {% endfor %}  
    </ul>
    <div class="m-4">
        <a class="text-light" href="students.json">Duomenų failas</a>
    </div>

{% endblock %} 