{% extends 'base.html.twig' %}

{% block title %}Projektai{% endblock %}

{% block body %}
    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Studentai</li>

        {% for data in studentsData %}
            <li class="list-group-item">

                <a href="{{ path('student', {'name': data.student, 'project':  data.project}) }}">{{ data.student }}</a>

                    {% for mentor in data.mentors %}

                        ( <span class="badge">Mentorius</span>
                        {{ mentor }} )

                    {% endfor %}
            </li>
        {% endfor %}


    </ul>

    <div class="m-4">
        <form action="/student" method="get">
            <div class="input-group">
                <input name="name" type="text" class="form-control" placeholder="Studentas"/>
            </div>
            <div class="input-group">
                <input name="project" type="text" class="form-control" placeholder="Projektas"/>
            </div>
            <button type="submit" class="btn btn-success">Sužinoti vertinimą</button>
        </form>
    </div>

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>
        {% for data in projects %}
            <li class="list-group-item">
                <h3>{{ data.projectTitle }}</h3>
                <div class="panel panel-default">
                    <div>
                        <a target="_blank" href="https://github.com/nfqakademija/{{ data.project }}">github.com/nfqakademija/{{ data.project }}</a>
                        <span class="badge">GitHub</span>
                    </div>
                    <div>
                        <a target="_blank" href="http://{{ data.project|escape}}.projektai.nfqakademija.lt/">{{ data.project }}.projektai.nfqakademija.lt/</a>
                        <span class="badge">Web</span>
                    </div>
                    <div>
                        <pre>ssh {{ data.project|escape}}@deploy.nfqakademija.lt -p 2222</pre>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="m-4">
        <a class="text-light" target="_blank" href="students.json">Duomenų failas</a>
    </div>
{% endblock %}
