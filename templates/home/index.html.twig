{% extends 'base.html.twig' %}

{% block title %}Students{% endblock %}

{% block students %}

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Studentai</li>
        {% for student in students %}
            <li class="list-group-item">
                <a href="{{ path('student', {name: student['student']|url_encode, project: student['project']|url_encode}, relative = true) }}">{{ student['student'] }}</a>
                (
                <span class="badge">Mentorius</span>{{ student['mentors'][0] }}
                )
            </li>
        {% endfor %}
    </ul>

{% endblock %}

{% block body %}
    <div class="m-4">
        <form action="{{ path('student') }}" method="get">
            <div class="input-group">
                <input name="name" type="text" class="form-control" placeholder="Studentas"/>
            </div>
            <div class="input-group">
                <input name="project" type="text" class="form-control" placeholder="Projektas"/>
            </div>
            <button type="submit" class="btn btn-success">Sužinoti vertinimą</button>
        </form>
    </div>

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>

        {% for key, team in projects %}
                <li class="list-group-item">
                    <h3>{{ team['name'] }}</h3>
                    <div class="panel panel-default">
                        <div>
                            <a target="_blank" href="{{ relative_path(team['github']) }}">github.com/nfqakademija/{{ team['name']|url_encode }}</a>
                            <span class="badge">GitHub</span>
                        </div>
                        <div>
                            <a target="_blank" href="{{ relative_path(team['web']) }}">{{ team['name']|url_encode }}.projektai.nfqakademija.lt/</a>
                            <span class="badge">Web</span>
                        </div>
                        <div>
                            <pre>ssh {{ team['name'] }}@deploy.nfqakademija.lt -p 2222</pre>
                        </div>
                    </div>
                </li>
        {% endfor %}
    </ul>
    <div class="m-4">
        <a class="text-light" href="{{ relative_path('students.json') }}">Duomenų failas</a>
    </div>
{% endblock %}
