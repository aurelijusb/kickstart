{% extends 'base.html.twig' %}

{% block title %}Projektai{% endblock %}


{% block body %}

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Studentai</li>
        {% for i in 0 .. teams|length - 1 %}
            {% for student in students[i] %}
                <li class="list-group-item">                    
                    <a href="{{ path('student', {'student': student, 'project': team_names[i]}) }}">{{ student }}</a>
                    (
                    <span class="badge">Mentorius</span> {{ mentors[i] }}
                    )
                </li>
            {% endfor %}
        {% endfor %}
    </ul>

    <div class="m-4">
        <form action="{{path('student')}}" method="get">
            <div class="input-group">
                <input name="student" type="text" class="form-control" placeholder="Studentas"/>
            </div>
            <div class="input-group">
                <input name="project" type="text" class="form-control" placeholder="Projektas"/>
            </div>
            <button type="submit" class="btn btn-success">Sužinoti vertinimą</button>
        </form>
    </div>

    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>
        {% for i in 0 .. teams|length - 1 %}
            <li class="list-group-item">
                <h3>{{team_names[i]}}</h3>
                <div class="panel panel-default">
                    <div>
                        <a target="_blank" href="https://github.com/nfqakademija/{{ teams[i] |url_encode }}">github.com/nfqakademija/{{ teams[i] }}</a>
                        <span class="badge">GitHub</span>
                    </div>
                    <div>
                        <a target="_blank" href="http://{{ teams[i] | url_encode}}.projektai.nfqakademija.lt/">{{ teams[i] }}.projektai.nfqakademija.lt/</a>
                        <span class="badge">Web</span>
                    </div>
                    <div>
                        <pre>ssh {{ teams[i] }}@deploy.nfqakademija.lt -p 2222</pre>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="m-4">
        <a class="text-light" href="students.json">Duomenų failas</a>
    </div>
{% endblock %}