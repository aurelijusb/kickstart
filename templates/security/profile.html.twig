{% extends 'base.html.twig' %}

{% block title %}Naudotojas{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 id="user_{{ userId }}">Naudotojas</h1>
        {{ user.username }}
        {% for role in roles %}
            <span class="badge badge-secondary">{{ role|lower }}</span>
        {% endfor %}
        <div class="mb-2">
            {% if user.homepage %}
                <span class="badge badge-primary">Website</span> <a href="{{ absolute_url(user.homepage) }}">{{ user.homepage }}</a><br>
            {% endif %}
            {% if user.linkedin %}
            <span class="badge badge-primary">Linkedin</span> <a href="{{ absolute_url(user.linkedin) }}">{{ user.linkedin }}</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
