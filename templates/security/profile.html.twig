{% extends 'base.html.twig' %}

{% block title %}Naudotojas{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 id="user_{{ userId }}">Naudotojas</h1>
        {{ user.username }}
        {% for role in roles %}
            <span class="badge badge-secondary">{{ role|lower }}</span>
        {% endfor %}
        {% if user.homepage %}
        <div class="mb-2">
            <span class="badge badge-primary">Website</span> <a href="{{ user.homepage }}">{{ user.homepage }}</a>
        </div>
        {% endif %}
        {% if user.linkedin%}
        <div class="mb-2">
            <span class="badge badge-primary">LinkedIn</span> <a href="{{ user.linkedin }}">{{ user.linkedin }}</a>
        </div>
        {% endif %}

    </div>
{% endblock %}
