{% extends 'base.html.twig' %}

{% block title %}Naudotojas{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 id="user_{{ userId }}">Naudotojas</h1>
        {{ user.username }}
        {% for role in roles %}
            <span class="badge badge-secondary">{{ role|lower }}</span>
        {% endfor %}
        <div class="mb-2">
            <span class="badge badge-primary">Website</span> <a
                    href="{{ user.homepage | url_encode }}"></a>{{ user.homepage }}
        </div>
        <div class="mb-2">
            <span class="badge badge-primary">LinkedIn</span> <a
                    href="{{ user.linkedin | url_encode }}"></a>{{ user.linkedin }}
        </div>
    </div>
{% endblock %}
