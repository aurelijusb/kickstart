{% extends 'base.html.twig' %}

{% block title %}Hello StudentasController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="body-bg">
    <div class="bg-light m-4">
            <table class="table">
                <tbody>
                <tr>
                    <th scope="row">Projektas</th>
                    <th scope="row">Studentas</th>
                </tr>
                <tr>
                    <td>{{projectName}}</td>
                    <td>{{studentName}}</td>
                </tr>
                </tbody>
            </table>
                        
                    {% if(studentName=="Matas") %}
                    <div class="alert alert-success" role="alert">
                    Dešimt balų
                    </div>
                    {% else %}
                    <div class="alert alert-warning" role="alert">
                    Gal pasiseks kitą kartą
                    </div>
                    {% endif %}
            
                </div>
        <div class="m-4">
            <a class="text-light" href="{{path("home")}}">Visi studentai</a>
        </div>
    </div>
{% endblock %}
